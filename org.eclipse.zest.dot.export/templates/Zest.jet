<% Graph graph = (Graph) argument; %>
<% boolean digraph = graph.getConnectionStyle()==ZestStyles.CONNECTIONS_DIRECTED;%>
<%= digraph ? "digraph" : "graph" %> <%=graph.getClass().getSimpleName()%>{

	/* Global settings */
	node[shape=box] //more like the Zest default node look
	label="<%=graph%>"
	
	/* Nodes */
	<% for(Object nodeObject : graph.getNodes()){ GraphNode node = (GraphNode) nodeObject; %> <%=node.hashCode()%>[label="<%=node.getText()%>"];<% }%>
	
	/* Edges */
	<% for(Object edgeObject : graph.getConnections()){ GraphConnection edge = (GraphConnection) edgeObject; %> <%boolean dashed = edge.getLineStyle() == SWT.LINE_DASH; boolean dotted = edge.getLineStyle() == SWT.LINE_DOT;%> <%=edge.getSource().hashCode()%> <%= digraph ? "->" : "--" %> <%=edge.getDestination().hashCode()%>[style=<%=dashed?"dashed":dotted?"dotted":"solid"%> label="<%=edge.getText()%>"];
	<% }%>
}